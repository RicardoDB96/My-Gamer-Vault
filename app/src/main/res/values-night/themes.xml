<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyGamerVault" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHighlight">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/gray_bg</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray_bg</item>
        <item name="materialCardViewElevatedStyle">@style/CustomCardView</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="extendedFloatingActionButtonStyle">@style/FABStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="popupMenuBackground">@color/gray_bg</item>
    </style>

    <style name="CustomCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/gray_variant</item>
    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FABStyle" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimaryVariant</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FABLabelStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="CompleteToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/gray_bg</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ButtonColor" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/gray_variant</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:navigationBarColor">@color/background_color_bottom_sheet_night</item>
        <item name="backgroundTint">@color/background_color_bottom_sheet_night</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="android:textViewStyle">@style/BottomSheet.TextView</item>
    </style>

    <style name="BottomSheet.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>