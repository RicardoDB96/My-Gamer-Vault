<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyGamerVault" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHighlight">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/gray_bg</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="materialCardViewElevatedStyle">@style/CustomCardView</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="extendedFloatingActionButtonStyle">@style/FABStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.MyGamerVault">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:navigationBarColor">@color/gray</item>
        <item name="android:statusBarColor">@color/gray</item>
    </style>

    <style name="CustomCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FABStyle" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimaryVariant</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FABLabelStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/rounded_corner</item>
    </style>

    <style name="CompleteToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="navigationIconTint">@color/gray_toolbar</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="GameStatus">
        <item name="drawableTint">@color/game_status</item>
        <item name="android:textColor">@color/game_status</item>
    </style>

    <style name="ButtonColor" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/ripple_effect</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:navigationBarColor">@color/background_color_bottom_sheet</item>
        <item name="backgroundTint">@color/background_color_bottom_sheet</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="android:textViewStyle">@style/BottomSheet.TextView</item>
    </style>

    <style name="BottomSheet.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>