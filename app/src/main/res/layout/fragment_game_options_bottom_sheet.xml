<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usescases.common.bottomsheet.GameOptionsBottomSheetFragment">

    <TextView
        android:id="@+id/editGameBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/ripple_effect"
        android:drawablePadding="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/edit_game"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/edit_bottom_sheet"
        app:drawableTint="@color/icon_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deleteSubjectBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:drawablePadding="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="fill_vertical"
        android:padding="20dp"
        android:text="@string/delete_game"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/delete_bottom_sheet"
        app:drawableTint="@color/icon_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editGameBottom" />

</androidx.constraintlayout.widget.ConstraintLayout>